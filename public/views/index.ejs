<!doctype html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width,initial-scale=1.0">
  <title>Pup-Pals</title>
  <!-- Google Fonts -->
  <link href="https://fonts.googleapis.com/css?family=Roboto+Slab:300,400,700" rel="stylesheet">
  <link href='https://fonts.googleapis.com/css?family=Roboto:400,500,300' rel='stylesheet' type='text/css'>
  <!-- Youtube CSS -->
  <link href="/styles/YTPlayer.css" rel="stylesheet" type="text/css" />
  <!--external css-->
  <link href="/styles/simple-line-icons.css" rel="stylesheet" />
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" />
  <!-- Custom styles for this template -->
  <link href="/styles/style.css" rel="stylesheet">
  <link href="/styles/main.css" rel="stylesheet">
  <link rel="icon" href="/styles/pictures/dog-paw.png" type="image/png">

<body data-spy="scroll" data-offset="80">
  <!-- Preloader -->
  <div class="animationload">
    <div class="loader">&nbsp;</div>
  </div>
  <!-- End Preloader -->

  <!-- Header -->
  <% include partials/_navbar.ejs%>
    <!-- /Header -->

    <!-- Home -->

    <section id="home" class="home-section">
      <div id="video_container" class="video-bg-slider"></div>
      <div id="P3" class="player video-container" data-property="{videoURL:'P52aXzGHGU4',containment:'#video_container',autoPlay:true, showControls:false, mute:true, startAt:0}"></div>
      <div class="container slidero">
        <div class="row">
          <div class="col-md-12">
            <h1 class="intro-title">Pups Need Pals<span class="element" data-elements="for your puppy"></span></h1>
            <p class="intro-text"></p>
            <div class="btn-bar">
              <a href="/events" class="btn btn-primary btn-lg btn-find">Find a Pup Party</a>
              <%if(user){%>
                <a href='#' class="btn btn-outline btn-lg" data-toggle="modal" data-target="#myModal">Create a Pup Party</a>
              <%}else{%>
                <a href='/user/login' class="btn btn-outline btn-lg">Create a Pup Party</a>
              <%}%>
            </div>
          </div>
          <!-- /col -->
        </div>
        <!-- /row -->
      </div>
      <!-- /container -->
    </section>
    <!-- /Home -->

     <!-- FUN-FACTS -->
    <section class="fun-facts bg-dark" id="fun-facts">
      <div class="container">
        <div class="feature-box col-lg-4 text-center">
          <h2 class="featured-heading"><i class="fa fa-star" aria-hidden="true"></i></i> Most Popular Park</h2>
            <div class="featured-body">
              <a href="https://www.google.ca/maps/dir//Spanish+Banks+Beach+Park,+4801+NW+Marine+Dr,+Vancouver,+BC+V6T+1E2/@49.2768953,-123.2196682,17z/data=!4m15!1m6!3m5!1s0x5486729281cc092d:0x886c0a9a6aa169d!2sSpanish+Banks+Beach+Park!8m2!3d49.2768918!4d-123.2174795!4m7!1m0!1m5!1m1!1s0x5486729281cc092d:0x886c0a9a6aa169d!2m2!1d-123.2174795!2d49.2768918?hl=en" target="_blank">
                <h4 class="featured-title">Spanish Banks Park</h4>
                <br>
                <img class="featured-map" src="/styles/pictures/2.png" alt="">
              </a>
            </div>
        </div>
        <div class="col-lg-4 feature-box text-center">
          <h2 class="featured-heading"><i class="fa fa-handshake-o" aria-hidden="true"></i> Featured Meetup</h2>
            <div class="featured-body">
              <a href="/events/featured">
                <h4 class="featured-title">National Dog Day</h4>
              </a>
                <span class="featured-date"><i class="fa fa-clock-o" aria-hidden="true"></i> <Moment format="ddd MMMM Do YYYY">Saturday August 26 2017</Moment></span>
                <span class="featured-time"><Moment format="h:mm a">12:00 pm</Moment></span>
                <span class="featured-location"><i class="fa fa-map-marker" aria-hidden="true"></i> Charleson Park</span>
              <img class="featured-img" src="/styles/pictures/1.png" alt="">
            </div>
        </div>
        <div class="col-lg-4 text-center feature-box">
          <h2 class="featured-heading"><i class="fa fa-paw" aria-hidden="true"></i></i> Random Pup Pal</h2>
            <div class="featured-body">
              <a href="/pet/<%=pup.id%>">
                <h4 class="featured-title"><%=pup.name%></h4>
              </a>
                <p ><%=pup.breed%></p>
                <img style="height:200px;" src="<%=pup.avatar_url%>">
            </div>
        </div>
      </div>
      <!--  /container -->
    </section>
    <!-- / FUN-FACTS -->
    <!-- Services -->
    <section class="services" id="services">
     <div class="container">
        <div class="row instagram-feed text-center">
          <div class="col-xs-12">
            <h1>Instagram
              <img src="https://cdn0.iconfinder.com/data/icons/shift-logotypes/32/Instagram-512.png" style="width: 25px; height:25px" />
            </h1>
            <h2 id="instagram-hashtag"><a href="https://www.instagram.com/explore/tags/puppals/" class=instagram-header>#puppals</a></h2>
            <script src="//lightwidget.com/widgets/lightwidget.js"></script>
            <iframe src="//lightwidget.com/widgets/c4c1919502a650c68221490b32469dde.html" scrolling="no" allowtransparency="true" class="lightwidget-widget" style="width: 100%; border: 0; overflow: hidden;"></iframe>
          </div>
        </div>
      </div>
    </section>

    <!-- Footer -->
    <footer class="footer text-center">
      <!-- Footer-copyright -->
      <p>Â©2017 Pup-Pals</p>
    </footer>
    <!-- /Footer -->

    <!-- Back to top -->
    <a href="#" class="back-to-top"> <i class="fa fa-chevron-up"> </i> </a>

    <!-- JavaScript
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
    <!-- jquery easing -->
    <script src="/scripts/jquery.easing.min.js"></script>
    <script src="/scripts/SmoothScroll.js"></script>
    <!-- Video -->
    <script type="text/javascript" src="/scripts/jquery.mb.YTPlayer.js"></script>
    <!-- Counter-up -->
    <script src="/scripts/waypoints.min.js" type="text/javascript"></script>
    <script src="/scripts/jquery.counterup.min.js" type="text/javascript"></script>
    <!--popup js-->
    <script src="/scripts/jquery.magnific-popup.min.js" type="text/javascript"></script>
    <!-- Parallax -->
    <script src="/scripts/jquery.stellar.min.js"></script>
    <script type="text/javascript">
      window.requestAnimationFrame || (window.requestAnimationFrame = function () {
        return window.webkitRequestAnimationFrame || window.mozRequestAnimationFrame || window.oRequestAnimationFrame ||
          window.msRequestAnimationFrame || function (n) {
            window.setTimeout(n, 1e3 / 60)
          }
      }());
    </script>
    <!-- EasyPieChart -->
    <script src="/scripts/jquery.circliful.min.js"></script>
    <!-- Custom -->
    <script src="/scripts/app.js" type="text/javascript"></script>

</body>

</html>