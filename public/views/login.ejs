<!doctype html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width,initial-scale=1.0">
  <title>Pup-Pals</title>
  <link href='https://fonts.googleapis.com/css?family=Roboto:400,500,300' rel='stylesheet' type='text/css'>
  <link href='http://fonts.googleapis.com/css?family=Roboto+Slab:400,300,700' rel='stylesheet' type='text/css'>
  <!-- Bootstrap core CSS -->
  <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" />
  <link href="/styles/style.css" rel="stylesheet">
  <link rel="stylesheet" href="/styles/main.css">
  <link rel="icon" href="/styles/pictures/dog-paw.png" type="image/png">
</head>

<body>
  <% include partials/_navbar.ejs%>
  <div class="animationload">
    <div class="loader">&nbsp;</div>
  </div>
  <script>
    $(window).ready(function() {
        $('.animationload').hide();
    });
  </script>
    <div class="container">
      <div class="row">
        <div class="registerdiv">
          <div class="col-md-6 col-md-offset-3 well well-sm">
            <div class="create-event form-group">
              <h2><i class="fa fa-paw" aria-hidden="true"></i> Log in</h2>
              <%if(error){%>
                <h4>
                  <%= error%>
                </h4>
                <%}%>
                  <form method="POST" action="/user/login" class="form-group">
                    <p>
                      <div class="input-group">
                        <span class="input-group-addon"><i class="fa fa-envelope fa" aria-hidden="true"></i></span>
                        <input class="form-control" type="email" name="email" placeholder="Email">
                      </div>
                    </p>
                    <p>
                      <div class="input-group">
                        <span class="input-group-addon"><i class="fa fa-lock fa-lg" aria-hidden="true"></i></span>
                        <input class="form-control" type="password" name="password" placeholder="Password">
                      </div>
                    </p>
                    <button type="submit" class="login btn btn-lg btn-primary btn-block">Login</button>
                  </form>
            </div>
          </div>
        </div>
      </div>
    </div>
</body>
<script>
  $('.form-group').on('submit', function() {
    $('.login').prop('disabled', true)
  })
</script>
</html>